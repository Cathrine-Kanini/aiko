{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/main.py"
    }
  ],
  "functions": {
    "main.py": {
      "maxDuration": 60
    }
  },
  "env": {
    "ENVIRONMENT": "production",
    "LLM_PROVIDER": "google", 
    "LLM_MODEL": "gemini-1.5-flash",
    "DEBUG": "False",
    "LOG_LEVEL": "INFO",
    "CHROMA_PERSIST_DIR": "/tmp/chroma_db"
  }
}